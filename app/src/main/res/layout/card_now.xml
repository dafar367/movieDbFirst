<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_now"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_card_now"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_crop" />

            <TextView
                android:id="@+id/lbl_title_card_nowPlay"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Title"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_card_now"
                app:layout_constraintTop_toTopOf="@+id/image_card_now" />

            <TextView
                android:id="@+id/lbl_overview_card_nowPlaying"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="subtitle"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/lbl_realeaseDate_card_nowPlaying"
                app:layout_constraintEnd_toEndOf="@+id/lbl_title_card_nowPlay"
                app:layout_constraintStart_toEndOf="@+id/image_card_now"
                app:layout_constraintTop_toBottomOf="@+id/lbl_title_card_nowPlay" />

            <TextView
                android:id="@+id/lbl_realeaseDate_card_nowPlaying"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="subtitle"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/image_card_now"
                app:layout_constraintEnd_toEndOf="@+id/lbl_overview_card_nowPlaying"
                app:layout_constraintStart_toEndOf="@+id/image_card_now" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>